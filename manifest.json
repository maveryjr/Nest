{
  "manifest_version": 3,
  "name": "Nest - Smart Bookmarks & Notes",
  "version": "0.6.0",
  "description": "A smart bookmarking and notetaking sidebar for Chrome",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs",
    "notifications",
    "sidePanel",
    "windows"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Nest - Smart Bookmarks",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidepanel.html", "auth.html", "maximize.html"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "commands": {
    "save-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Save current page to Nest"
    },
    "save-to-inbox": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Command+Shift+I"
      },
      "description": "Save current page to Nest Inbox"
    },
    "open-command-palette": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Nest command palette"
    }
  }
} 